        "@wdio/local-runner": "^6.10.5",
        "@wdio/mocha-framework": "^6.11.0",
        "@wdio/selenium-standalone-service": "^6.11.0",
        "@wdio/spec-reporter": "^6.6.0",
        "autoprefixer": "^10.0.1",
        "bower": "^1.8.12",
        "chrome-launcher": "^0.13.4",
        "chromedriver": "^88.0.0",
        "cssnano": "^4.1.10",
        "eslint": "^7.18.0",
        "eslint-config-prettier": "^7.2.0",
        "grunt": "1.3.0",
        "grunt-cli": "1.3.2",
        "grunt-contrib-concat": "^1.0.1",
        "grunt-contrib-copy": "1.0.0",
        "grunt-contrib-requirejs": "1.0.0",
        "grunt-contrib-uglify-es": "3.3.0",
        "grunt-contrib-watch": "^1.1.0",
        "grunt-regex-replace": "0.4.0",
        "grunt-shell": "^3.0.1",
        "grunt-stylelint": "^0.15.0",
        "husky": "^4.3.0",
        "jasmine-ajax": "4.0.0",
        "jasmine-core": "^3.6.0",
        "jasmine-jquery": "2.1.1",
        "karma": "^6.1.0",
        "karma-chrome-launcher": "^3.1.0",
        "karma-coverage": "2.0.3",
        "karma-es6-shim": "1.0.0",
        "karma-firefox-launcher": "1.3.0",
        "karma-jasmine": "^4.0.1",
        "karma-json-result-reporter": "^1.0.0",
        "karma-mocha-reporter": "2.2.5",
        "karma-requirejs": "1.1.0",
        "karma-safari-launcher": "1.0.0",
        "load-grunt-tasks": "^5.1.0",
        "postcss": "^8.1.7",
        "postcss-cli": "^8.2.0",
        "postcss-remove-prefixes": "^1.2.0",
        "postcss-scss": "^3.0.4",
        "postcss-unprefix": "^2.1.4",
        "prettier": "^2.2.1",
        "puppeteer": "5.5.0",
        "requirejs": "2.3.6",
        "sass": "^1.28.0",
        "selenium-standalone": "6.23.0",
        "selenium-webdriver": "3.6.0",
        "string.prototype.endswith": "1.0.0",
        "string.prototype.startswith": "1.0.0",
        "stylelint": "^13.7.2",
        "stylelint-color-format": "^1.1.0",
        "stylelint-config-idiomatic-order": "^8.1.0",
        "stylelint-config-recommended": "^3.0.0",
        "stylelint-config-sass-guidelines": "^7.1.0",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-order": "^4.1.0",
        "wdio-chromedriver-service": "^6.0.4",
        "webdriverio": "^6.12.0"
    },
    "browserslist": [
        "defaults"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "npm run husky_msg && npm run compile_css",
            "pre-push": "npm run husky_msg && npm run update_browserslist"
        }
    },
    "scripts": {
        "black": "black -v --exclude '.+Impl.py' .",
        "bower": "bower install",
        "compile_css": "sass kbase-extension/scss/:kbase-extension/static/kbase/css/ && grunt postcss:concat",
        "eslint": "eslint --fix '**/*.js'",
        "flake8": "flake8 .",
        "husky_msg": "echo Running git hooks -- see the 'husky' section of package.json for details",
        "prettier": "prettier --write '**/*.js'",
        "sassv": "sass --version",
        "stylelint": "stylelint --config .stylelintrc.yaml --fix kbase-extension/scss/**/*.scss",
        "tdd": "karma start test/unit/karma.conf.js --auto-watch --no-single-run --reporters coverage,progress",
        "test": "karma start test/unit/karma.conf.js",
        "update_browserslist": "npx browserslist@latest --update-db",
        "watch_css": "grunt watch"
    }
}
